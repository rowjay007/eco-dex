{
  "name": "order-service",
  "version": "1.0.0",
  "description": "Order management microservice for Eco-Dex platform",
  "main": "dist/app.js",
  "type": "module",
  "scripts": {
    "drizzle:setup": "npx drizzle-kit generate && npx drizzle-kit migrate && npx drizzle-kit push && npx drizzle-kit pull && npx drizzle-kit check && npx drizzle-kit up && npx drizzle-kit studio",
    "start": "node dist/server.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'tsx' src/server.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@types/express": "^4.17.17",
    "@types/pg": "^8.11.11",
    "@upstash/redis": "^1.34.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "drizzle-orm": "^0.39.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "fp-ts": "^2.16.9",
    "helmet": "^7.2.0",
    "ioredis": "^5.3.2",
    "module-alias": "^2.2.3",
    "pg": "^8.10.0",
    "pino": "^9.6.0",
    "postgres": "^3.4.5",
    "process": "^0.11.10",
    "redis": "^4.7.0",
    "winston": "^3.8.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/jest": "^29.5.0",
    "@types/node": "^22.12.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "drizzle-kit": "^0.30.4",
    "eslint": "^8.38.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.0.4"
  }
}