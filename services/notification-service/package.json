{
  "name": "notification-service",
  "version": "1.0.0",
  "description": "Notification service using Novu for handling email, SMS, and push notifications",
  "main": "dist/app.js",
  "scripts": {
    "drizzle:setup": "npx drizzle-kit generate && npx drizzle-kit migrate && npx drizzle-kit push && npx drizzle-kit pull && npx drizzle-kit check && npx drizzle-kit up && npx drizzle-kit studio",
    "start": "node dist/server.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'tsx' src/server.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "dependencies": {
    "@novu/node": "^0.19.0",
    "@novu/notification-center": "^2.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@upstash/redis": "^1.34.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "kafkajs": "^2.2.4",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/node": "^20.17.19",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "eslint": "^8.48.0",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
