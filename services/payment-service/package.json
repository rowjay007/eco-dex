{
  "name": "@eco-dex/payment-service",
  "version": "1.0.0",
  "description": "Payment service for Eco-Dex platform",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'tsx' src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "node -r ts-node/register src/db/migrate.ts",
    "db:push": "drizzle-kit push:pg",
    "drizzle:setup": "npx drizzle-kit generate && npx drizzle-kit migrate && npx drizzle-kit push && npx drizzle-kit pull && npx drizzle-kit check && npx drizzle-kit up && npx drizzle-kit studio",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "migrate": "drizzle-kit push:pg",
    "generate": "drizzle-kit generate:pg"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.1",
    "@trpc/server": "^10.45.2",
    "@types/express-rate-limit": "^6.0.0",
    "@types/pg": "^8.11.11",
    "@types/pino-http": "^5.8.4",
    "@upstash/redis": "^1.34.4",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.39.3",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^7.2.0",
    "kafkajs": "^2.2.4",
    "pg": "^8.13.3",
    "pino": "^8.21.0",
    "pino-http": "^10.4.0",
    "pino-pretty": "^10.3.1",
    "pino-roll": "^1.0.0-rc.1",
    "postgres": "^3.4.5",
    "uuid": "^11.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.5",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "axios": "^1.7.9",
    "drizzle-kit": "^0.30.4",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3"
  }
}
